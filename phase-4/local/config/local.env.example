# Local Agent Configuration
# Phase 4 - Platinum Tier
# Agent Role: LOCAL (approvals, final sends, WhatsApp, banking)
# IMPORTANT: This file contains CREDENTIALS - never commit to Git

# Agent Identity
AGENT_ROLE=LOCAL
AGENT_NAME=local
VAULT_PATH=~/AI_Employee_Vault

# Watcher Configuration
WATCHER_INTERVAL=30
WHATSAPP_WATCHER_ENABLED=true
FINANCE_WATCHER_ENABLED=true

# Allowed Actions (Local approves and executes sensitive actions)
ALLOWED_ACTIONS=approve,send,post,whatsapp,banking,execute

# Email MCP (Local - has credentials for sending)
MCP_EMAIL_ENABLED=true
MCP_EMAIL_HOST=smtp.example.com
MCP_EMAIL_PORT=587
MCP_EMAIL_USER=your-email@example.com
# MCP_EMAIL_PASSWORD=your-app-password (set in actual .env)

# Odoo MCP (Local - can post invoices)
MCP_ODOO_ENABLED=true
MCP_ODOO_URL=https://odoo.yourdomain.com
MCP_ODOO_DB=odoo
MCP_ODOO_USER=admin
# MCP_ODOO_PASSWORD=your-odoo-password (set in actual .env)
MCP_ODOO_MODE=post

# Social Media MCPs (Local - has OAuth tokens)
MCP_SOCIAL_LINKEDIN_ENABLED=true
# LINKEDIN_ACCESS_TOKEN=your-token (set in actual .env)
# LINKEDIN_CLIENT_ID=your-client-id
# LINKEDIN_CLIENT_SECRET=your-client-secret

MCP_SOCIAL_FB_IG_ENABLED=true
# FACEBOOK_PAGE_ACCESS_TOKEN=your-token (set in actual .env)
# INSTAGRAM_BUSINESS_ID=your-business-id

MCP_SOCIAL_X_ENABLED=true
# TWITTER_API_KEY=your-api-key (set in actual .env)
# TWITTER_API_SECRET=your-api-secret
# TWITTER_ACCESS_TOKEN=your-access-token
# TWITTER_ACCESS_SECRET=your-access-secret

# WhatsApp Session (Local only - never sync)
WHATSAPP_SESSION_PATH=~/.whatsapp/session.data
WHATSAPP_QR_CODE_PATH=~/.whatsapp/qr.png

# Banking Credentials (Local only - never sync)
# BANK_API_KEY=your-bank-api-key (set in actual .env)
# BANK_ACCOUNT_ID=your-account-id

# Sync Configuration
SYNC_INTERVAL=30
GIT_REPO_PATH=~/AI_Employee_Vault
GIT_BRANCH=main

# Logging
LOG_LEVEL=INFO
LOG_FILE=~/ai-employee/agent.log

# Dashboard (Local is single-writer)
DASHBOARD_MERGE_UPDATES=true
DASHBOARD_UPDATE_INTERVAL=60
